{
  "name": "ai-chat",
  "description": "AI Chat",
  "version": "0.0.1",
  "publisher": "dimslaev",
  "repository": {
    "type": "git",
    "url": "https://github.com/dimslaev/ai-chat"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.98.0"
  },
  "activationEvents": [],
  "main": "./out/extension/extension.js",
  "icon": "resources/chat-logo.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-chat-sidebar",
          "title": "AI Chat",
          "icon": "resources/chat-icon.png"
        }
      ]
    },
    "views": {
      "ai-chat-sidebar": [
        {
          "type": "webview",
          "id": "ai-chat-view",
          "name": "AI Chat",
          "icon": "resources/chat-logo.png"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-chat.generateProjectMd",
        "title": "Analyze Project & Generate project.md",
        "category": "AI Chat"
      }
    ],
    "configuration": {
      "title": "AI Chat",
      "properties": {
        "aiChat.provider": {
          "type": "string",
          "enum": [
            "openai",
            "groq"
          ],
          "default": "groq",
          "description": "AI provider to use (OpenAI or Groq)",
          "scope": "application",
          "order": 1
        },
        "aiChat.apiKey": {
          "type": "string",
          "default": "key",
          "description": "API key for the selected provider",
          "scope": "application",
          "order": 2
        },
        "aiChat.baseURL": {
          "type": "string",
          "default": "",
          "description": "Base URL for the chat service (optional for standard providers)",
          "scope": "application",
          "order": 3
        },
        "aiChat.model": {
          "type": "string",
          "default": "meta-llama/llama-4-scout-17b-16e-instruct",
          "description": "Model to use (e.g., gpt-4, llama3-8b-8192)",
          "scope": "application",
          "order": 4
        },
        "aiChat.toolsEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable tools/agent mode (file operations, search, etc.)",
          "scope": "application",
          "order": 5
        }
      }
    }
  },
  "scripts": {
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "tsc",
    "build:webview": "webpack --mode production",
    "watch": "npm-run-all --parallel watch:*",
    "watch:extension": "tsc -watch",
    "watch:webview": "webpack --mode development --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/marked": "^4.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/vscode": "^1.98.0",
    "css-loader": "^6.0.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "style-loader": "^3.0.0",
    "ts-jest": "^29.2.3",
    "ts-loader": "^9.0.0",
    "typescript": "^4.5.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/themes": "^3.2.1",
    "groq-sdk": "^0.25.0",
    "highlight.js": "^11.11.1",
    "marked": "^4.0.0",
    "openai": "^4.90.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-textarea-autosize": "^8.5.8",
    "zod": "^3.23.8",
    "zustand": "^5.0.5"
  }
}
